<!DOCTYPE html>
<html>
  <head>
    <title>Tunr!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
  </head>

  <body>

    <nav>
      <h1>
        Tunr Music Database
      </h1>

       <% if @current_user.present? %>
         Welcome, <%= @current_user.name %>
         |
         <%= link_to 'Logout', login_path, method: 'delete' %>
         |
         <%= link_to 'Create Mixtape', new_mixtape_path %>
       <% else %>

         <%= link_to 'Login', login_path %>
         |
         <%= link_to 'Sign Up', '/does-not-exist-yet' %>

       <% end %>

       |
       <%= link_to 'Mixtapes Index', mixtapes_path %>


      <hr>
    </nav>

    <%= yield %>

    <footer>
      <hr>
      &copy; Music Snob Productions 2022
    </footer>

  </body>
</html>
