

<h2><%= @artist.name %></h2>

<%= link_to 'Edit', edit_artist_path(@artist) %>
|
<%= link_to 'Delete', artist_path(@artist), method: 'delete' %>

<p>
  <strong>Nationality</strong>:
  <%= @artist.nationality %>
</p>

<p>
  <strong>Date of Birth</strong>:
  <%= @artist.dob %>
</p>

<p>
  <strong>Period</strong>:
  <%= @artist.period %>
</p>

<p>
  <strong>Roudness</strong>:
  <%= @artist.roundness %>
</p>

<p>
  <strong>Bio</strong>:
  <%= @artist.bio %>
</p>

<!--
  TODO: show a list of works for this artist, which
  link to the show page for each work.
  Why not show thumbnail images for each of them?
 -->

<% if @artist.image.present? %>
  <%= image_tag @artist.image, alt: @artist.name, class: 'artist_image' %>
<% end %>
